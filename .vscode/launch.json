    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Demo1",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/demo1/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Demo2",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/demo2",
            "program": "${workspaceFolder}/demo2/init.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ]
}